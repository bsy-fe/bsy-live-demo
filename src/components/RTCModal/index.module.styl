@import '~@/theme.styl'

.rtc-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.6);
  top: 0;
}

.rtc-confirm-container {
  position: fixed;
  width: 360px;
  // height: 264px;
  background: #262626;
  border-radius: 16px;
  padding: 24px;
  padding-top: 48px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;

}

.rtc-close {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 16px;
  height: 16px;
  background: url(https://res-qn.baoshiyun.com/a/70701162201202iref.png) no-repeat center;
  background-size: contain;
  cursor: pointer;
}

.rtc-content {
  font-size: 16px;
  font-weight: 400;
  color: #BFBFBF;
  line-height: 24px;
  .confirm-title {
    font-size: 16px;
    font-weight: 400;
    color: #BFBFBF;
    line-height: 24px;
  }
}

.rtc-footer {
  // height: 22px;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: $primary-color;
  display: flex;
  justify-content: space-between;
  padding-top: 32px;
  text-align: center;
  button{
    outline: none;
  }
  .rtc-btn-cancel {
    width: 148px;
    height: 40px;
    border-radius: 8px;
    line-height: 40px;
    border: 1px solid $primary-color;
    cursor: pointer;
    background:transparent;
    &:hover{
      background-color: $primary-color + #020;
      border-color: $primary-color + #020;
    }
    &:active{
      background-color: $primary-color * .8;
      border-color: $primary-color * .8;
    }
  }

  .rtc-btn-ok {
    width: 148px;
    height: 40px;
    line-height: 40px;
    border-radius: 8px;
    border: 1px solid $primary-color;
    background: $primary-color;
    color: #fff;
    cursor: pointer;
    &:hover{
      background-color: $primary-color + #020;
      border-color: $primary-color + #020;
    }
    &:active{
      background-color: $primary-color * .8;
      border-color: $primary-color * .8;
    }
    &.disabled{
      transition: all 0.2 ease;
      opacity: 0.8;
      cursor: not-allowed;
      &:hover{
        background-color: $primary-color;
        border-color: $primary-color;
      }
    }
  }

}
