
.tips-wall{
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #000
  color #fff
  font-size 20px
  display flex
  justify-content center
  align-items center
  z-index 100
  .tips-img{
    margin-bottom 24px
    width 230px
    height 232px
  }
  .tips-text{
    text-align center
    color #ddd
    font-size 14px
  }
}

