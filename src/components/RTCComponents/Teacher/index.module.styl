.m-rtc-teacher-container{
  position absolute
  width 100%
  height 100%  
}
.m-teacher-video-wrap{
  width 100%
  height 100%  
}
.m-teacher-container-live{
  width 100%
  height 100%  
}
.m-teacher-container-rtc{
  position relative
  width 25vw
  height 18.61vw
  .m-teacher-content{
    position absolute
    bottom 0
    width 100%
    display flex
    justify-content space-between
    align-items center
    padding 0px 4px
    background linear-gradient(180deg, rgba(31,31,31,0) 0%, #1f1f1f 100%)
    height 16px
    line-height 16px
    z-index 3
    color #fff
    .m-teacher-tag {
      transform scale(0.8)
      width auto
      height 14px
      background #9A3100
      text-align center
      display inline-block
      line-height 14px
      border-radius 1px
      padding-left 4px
      padding-right 4px
      font-size 12px
    }
    .m-teacher-audio{
      width 12px
      height 12px
      background-size cover
      background-position center
      background-repeat no-repeat
      background-image url("https://res-qn.baoshiyun.com/95320220301202ywsf.png")
    } 
  }
  
}
.m-rtc-play-btn-wrap{
  padding-top: 82px;
  z-index: 9;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 0px;
  width: 100%;
  height: 100px;
  background #0c0c0c
}
.m-rtc-play-btn{
  margin 0 auto;
  width: 204px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(112, 36, 0, 1);
  border-radius: 20px;
  // opacity: 0.7;
  color: #fff;
  font-size: 14px;
  letter-spacing: 0;
  .m-btn-play {
    width: 28px;
    height: 28px;
    margin-right: 8px;
  }
}
.m-interact{
  position absolute
  top 0
  left 0
  width 25vw
  height 18.61vw
}