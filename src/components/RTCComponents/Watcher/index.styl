#rtc-view-wall{
  margin: 0 4px;
  width: 160px;
  height: 90px;
  background: #8C8C8C;
  border-radius: 2px;
  overflow: hidden;

  .rtc-view{
    position: relative;
    width: 160px;
    height: 90px;


    .rtc-horn {
      position: absolute;
      top: 2px;
      right: 2px;
      width: 10px;
      height: 10px;
      background: url(https://res-qn.baoshiyun.com/a/82453150301202pado.png) no-repeat center;
      background-size: contain;
      display: none;
    }
    // rtc 操作区域
    .rtc-action-wrapped {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0,0,0, .6)
    }
    .rtc-content{
      width: 100%;
      height: 100%;
      background: rgba(0,0,0, .6);
      position: relative;

      &.rtc-content-disable {
        video {
          display: none;
        }
        &:after {
          content: '';
          position: absolute;
          height: 100%;
          width: 100%;
          background-color #434343
          background-image url('//res-qn.baoshiyun.com/a/22901230601202ltqi.png?imageView2/0/interlace/1/q/90|imageslim')
          background-repeat no-repeat
          background-position: center
          background-size: 32px 32px
          z-index: 2;
          top: 0;
        }
      }
    }
    
    // rtc icon
    .rtc-icon{
      margin: 0 6px;
      width: 16px;
      height: 16px;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      cursor: pointer;
    }
    
    // .rtc-username {
    //   position: absolute;
    //   top: 72px;
    //   left: 4px;
    //   color: #fff;
    //   font-size: 12px;
    //   transform: scale(0.8);
    //   transform-origin: left center
    // }

  }
  .rtc-view-mask {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 160px;
    height: 90px;
    padding: 4px;
    z-index: 3;
    background: rgba(0,0,0, .6);
  }
  .rtc-view:hover .rtc-view-mask {
    display: block;
  }
  .student-info{
    position: absolute;
    padding: 0 4px;
    width: 100%;
    height: 20px;
    right: 0;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 3;
    background: linear-gradient(180deg, rgba(31, 31, 31, 0) 0%, rgba(31, 31, 31, .5) 50%, #1F1F1F 100%);
    
    border-radius: 0px 0px 2px 2px;
    .rtc-username{
      width: 150px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      font-size: 12px;
      transform: scale(0.8);
      color: #fff;
      transform-origin: left center;
    }
    .rtc-user-status {
      width: 12px;
      height: 12px;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-image: none;
    }
  }
  // 静音图标
  .cancel-muted{
    display none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0, .4);
    .muted-icon-wall{
      padding: 5px;
      margin: 0 auto;
      margin-top: 25px;
      text-align center
    }
    .muted-icon{
      width: 30px;
      height: 30px;
      cursor pointer
    }
  }
  // 挂断
  .rtc-hangup{
    background-image: url('https://res-qn.baoshiyun.com/43001120301202xejx.png');
  }
  // 视频
  .rtc-video{
    background-image: url('https://res-qn.baoshiyun.com/43001120301202puxa.png');
    &.rtc-video-disable{
      background-image: url('https://res-qn.baoshiyun.com/95320220301202expj.png');
    }
    &.rtc-video-hidden{
      display: none;
    }
  }
  // 音频
  .rtc-audio{
    background-image: url('https://res-qn.baoshiyun.com/43001120301202hxry.png');
    &.rtc-audio-disable{
      background-image: url('https://res-qn.baoshiyun.com/95320220301202ywsf.png');
    }
  }
  
}

