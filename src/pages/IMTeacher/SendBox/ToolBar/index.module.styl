@import '../../common.styl';
.toolbar-wrapper
  position relative
  display flex
  border-bottom 1px solid #0c0c0c
  padding  8px 16px
  font-size 14px
  color #808080
  background #262626
  align-items center
  height: 32px;
  box-sizing: border-box;
  .tb-item
    display inline-block
    margin-right 16px
    height 16px
    line-height 16px
    cursor pointer
    &:hover
      // color #333
  .tb-item-emoji
    // width 20px
    // height 20px
    position: absolute
    bottom -36px
    display flex
    align-items center
    margin-right 24px
    .icon
      width 20px
      height 20px
      background url(https://img.kaikeba.com/82857182400202frhf.png) center no-repeat
      background-size cover
      &:hover
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:focus
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:active
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:focus
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)

    .icon-mute
      background-image url(https://img.kaikeba.com/82857182400202frhf.png)
      &:hover
        background-image url(https://img.kaikeba.com/82857182400202frhf.png)
  .tb-item-like
    position absolute
    top 8px
    right 0px
    height 16px
    line-height 16px
    display flex
    align-items center
    user-select none
    color #bfbfbf
    font-size 12px
    .icon
      width 16px
      height 16px
      background url(https://img.kaikeba.com/72209171400202rvky.png) center no-repeat
      background-size cover
      display inline-block
      margin-right 4px
  .tb-item-image
    position absolute
    bottom -34px
    left: 44px;
    // height: 20px;
.emoji-wrapper
  display flex
  width 240px
  height 160px
  overflow-y scroll
  justify-content flex-start
  flex-wrap wrap
  .emoji
    width 40px
    height 40px
    cursor pointer
  .emj-img
    width 30px
    height 30px
.emoji-wrapper-m
  display flex
  min-width 280*$vw
  max-width 100vw
  height 160*$vw
  overflow-y scroll
  justify-content flex-start
  flex-wrap wrap
  padding 5*$vw 5*$vw
  padding-left 8*$vw
  margin-top 9*$vw
  .emoji
    width 35*$vw
    height 35*$vw
    cursor pointer
    text-align center
  .emj-img
    width 25*$vw
    height 25*$vw
.mute-container
  // position absolute
  top 20px
  right 28px
  font-size 14px;
  width 80px
  height 14px
  line-height 14px
  cursor pointer
  display flex
  align-items center
  font-family PingFangSC-Regular,PingFang SC
  font-weight 400
  color: #8C8C8C
  user-select none
  .mute-icon, .mute-icon-select
    width 12px
    height 12px
    transition all .3s ease
    border-radius 3px
    border 1px solid #8C8C8C
    margin-right 3px
  .mute-icon
    background url(data:;base64,=) no-repeat center
    background-size cover
    background-color transparent
    //background url('https://img.kaikeba.com/65845122400202nvfz.png') no-repeat center
  .mute-icon-select
    background url('~@/assets/correct.svg') no-repeat center
    background-size cover
    background-color: $primary-color
    border-color $primary-color

.toolbar-wrapper-m
  border-top none
  padding 0
  font-size 16*$vw
  color #808080
  background none
  height 50$vw
  .tb-item-like
    position absolute
    top -2*$vw
    right 0*$vw
    height 35*$vw
    width: 35px
    line-height 35*$vw
    display flex
    align-items center
    user-select none
    color #dddddd
    font-size 16*$vw
    .like-num 
      position absolute
      top  -10*$vw
      right 0
      color #E64262
      background #FFFFFF
      border-radius 7*$vw
      padding 0 0*$vw
      line-height 14*$vw
      height 14*$vw
      font-size 10*$vw
      font-weight bold
      z-index 10
      width 35*$vw
      text-align center
      letter-spacing 0
      overflow hidden
      



    .icon 
      width 35*$vw
      height 35*$vw
      background url(https://img.kaikeba.com/a/35816140101202ckbh.png) center no-repeat
      background-size contain
      display inline-block 
      margin-right 0
      
      .icon-like 
        width 20*$vw
        height 20*$vw
        margin auto
        margin-top: 15*$vw
      // margin-right 4*$vw
.online-wrapper
  position absolute
  top 8px
  right 81px
  height 16px
  line-height 16px
  display flex
  align-items center
  -webkit-user-select none
  user-select none
  color #bfbfbf
  font-size 12px
