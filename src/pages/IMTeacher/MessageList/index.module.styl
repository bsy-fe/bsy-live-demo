  .new-message
    visibility hidden
    opacity 0
    position absolute
    bottom 10px
    left 50%
    font-size 12px
    width 76px
    height 24px
    line-height 24px
    text-align center
    padding 0 10px
    transform translateX(-50%)

    box-sizing border-box
    background rgba(63, 63, 63, 1)
    color $primary-color
    border-radius: 12px
    cursor pointer

    &.show {
      transition opacity .2s
      transition-delay .3s
      opacity 1
      visibility visible !important
    }


    .new-message-icon
      width 7px
      height 7px
      vertical-align middle
      margin-top -2px

