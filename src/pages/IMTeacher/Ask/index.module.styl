@import '~@/theme.styl'

.ask-container
  height 100%
  overflow auto
  padding 16px

.ask-item
  .ask-item-container
    padding 12px
    background-color #1A1A1A
    border-radius 4px
    cursor pointer
    margin-bottom 16px
  .ask-no-cur
    cursor default
  .ask-item-content
    font-size: 14px
    line-height 20px
    word-wrap break-word
    text-overflow -o-ellipsis-lastline
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-line-clamp 2
    line-clamp 2
    -webkit-box-orient vertical
    *
      color #BFBFBF!important
    img
      padding 8px
      max-width 260px
  .ask-item-tea-content
    font-size 14px
    color #BFBFBF
    line-height 18px
    margin-bottom 12px
    word-wrap break-word
    text-overflow -o-ellipsis-lastline
    overflow hidden
    text-overflow ellipsis
    display: -webkit-box
    -webkit-line-clamp 2
    line-clamp: 2
    -webkit-box-orient vertical
    *
      color #BFBFBF!important
    img
      padding 8px
      max-width 260px
  .ask-item-type
    font-size 12px
    color #BFBFBF
    line-height 16px
  .ask-item-bottom
    display flex
    justify-content space-between
    .ask-send-btn
      cursor pointer
      display flex
      align-items: center
      opacity 0.8
      &:hover
        opacity 1
      &:focus
        opacity 0.7
      .ask-send-icon
        width 16px
        height 16px
        margin-right 4px
      .ask-send-txt
        font-size 12px
        color $primary-color



.total-wrapper
  background: #343434;
  border-radius: 8px;
  padding 12px 12px;
  font-size: 14px;
  font-weight: 400;
  color: #D9D9D9;
  line-height: 22px;
  margin-bottom: 16px;
