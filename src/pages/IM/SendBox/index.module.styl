  .edit-area-box 
    position relative
    width  304*$vw
    margin 0 12*$vw
  .edit-area-box-foucs 
    width  304*$vw
  .edit-area
    display block
    width 100%
    height 35*$vw
    line-height 20*$vw
    box-sizing border-box
    outline none
   
    box-sizing: border-box
    padding 7*$vw 35*$vw 7*$vw 12*$vw
    resize none
    border none
    box-sizing border-box
    background rgba(0,0,0,0.24)
    color #fff
    font-size 12*$vw
    border-radius 18*$vw
    transition width 0.2s ease
  
  .send-area-box 
    position absolute
    top 11*$vw 
    right 12*$vw
    width 33*$vw
    border-radius 50%
    width 33*$vw
    height 33*$vw
    background #000
    border none
    text-align center
    button
      border-radius 50%
      width 33*$vw
      height 33*$vw
      background none
      border none
      padding 0
    .send-icon 
      width 33*$vw
      height 33*$vw
      background url('https://img.kaikeba.com/53658161600202jgvl.png') center
      background-size cover
      // opacity 0.3
      transition all .3s ease
      vertical-align middle
    .send-area-active
      background #000
      .send-icon 
        background-image url('https://res-qn.baoshiyun.com/a/43531101301202ryjd.png')
        opacity 1
  .sendbox-wrapper-mute 
    .edit-area 
      color #999
    .send-area 
      background #4D4D4D
      border: none
  .icon-e 
    position absolute
    top 6.5*$vw
    right 6*$vw
    width 20*$vw
    height 20*$vw
    background url(https://img.kaikeba.com/82857182400202frhf.png) center no-repeat
    background-size cover 
  .icon-active
    background-image url(https://img.kaikeba.com/72209171400202flfv.png)
  .icon-mute 
    background-image url(https://img.kaikeba.com/82857182400202frhf.png)
    &:hover
      background-image url(https://img.kaikeba.com/82857182400202frhf.png)
  .toolbar-wrapper-container
    position absolute
    right 0
    // left 200*$vw
    top 10*$vw
    .like-box
      position absolute
      right 20*$vw


