@import '../common.styl';
.mask {
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 1000
}
.sendbox-wrapper
  position relative
  height 128px
  // border-bottom: 1px solid #ccc
  background #232323
  
  .edit-area
    display block
    width calc(100% - 74px)
    height 52px
    margin 0 16px
    box-sizing: border-box
    padding 8px 12px
    resize none
    border none
    box-sizing border-box
    background #3F3F3F
    color #DDD
    font-size 14px
    border-radius  8px 0 0 8px
    outline none



  .send-area

    .send-area {
      right 0
      bottom 0
      top 0
      background rgba(77,77,77,1)
    }

    background rgba(77,77,77,1)
    position absolute
    border none
    right 16px
    top 53px
    padding 0
    border-radius 0 8px 8px 0 
    text-align: center
    width 48px
    height 52px
    line-height 52px
    display block
    // &:hover 
    //   background #0FBDFF
    //   .send-icon 
    //     background-image url ('https://img.kaikeba.com/71449171400202xlum.png')
    //     opacity 1
    .send-icon 
      width 16px
      height 16px
      background url ('https://img.kaikeba.com/71449171400202xlum.png') center none
      background-size cover
      opacity 0.3
      transition all .3s ease
      vertical-align middle
  .send-area
    .send-area-active
      background $primary-color
      .send-icon 
          background-image url ('https://img.kaikeba.com/71449171400202xlum.png')
          opacity 1
.sendbox-wrapper-mute 
  .edit-area 
    color #999
    line-height 17px
  .send-area 
    background #4d4d4d
    border: none

.sendbox-wrapper-m
  box-sizing border-box
  position relative
  min-height 55*$vw
  // display flex
  // align-items center
  padding 8*$vw 0
  padding-top: 10px;
  // padding-bottom 8*$vw
  // border-top: 1*$vw solid #ccc
  background transparent 
  padding-bottom 0
  // &:after
  //   content: ""
  //   position absolute
  //   top -24*$vw
  //   height 24*$vw
  //   background linear-gradient(to top ,rgba(39,39,39,1) 0%,rgba(39,39,39,0) 100%)
