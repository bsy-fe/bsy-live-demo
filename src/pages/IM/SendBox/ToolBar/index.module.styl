@import '../../common.styl';
.toolbar-wrapper
  position relative
  display flex
  border-top 1px solid #232323
  padding 16px
  font-size 16px
  color #808080
  background #232323
  align-items center
  .tb-item
    display inline-block
    margin-right 12px
    height 20px
    line-height 20px
    cursor pointer
    &:hover
      // color #333
  .tb-item-emoji
    // width 20px
    // height 20px
    display flex
    align-items center
    margin-right 24px
    .icon
      width 20px
      height 20px
      background url(https://img.kaikeba.com/82857182400202frhf.png) center no-repeat
      background-size cover
      &:hover
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:focus
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:active
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)
      &:focus
        background-image url(https://img.kaikeba.com/72209171400202flfv.png)

    .icon-mute
      background-image url(https://img.kaikeba.com/82857182400202frhf.png)
      &:hover
        background-image url(https://img.kaikeba.com/82857182400202frhf.png)
  .tb-item-like
    position absolute
    top 15px
    right 10px
    height 20px
    line-height 20px
    display flex
    align-items center
    user-select none
    color #dddddd
    font-size 16px
    .icon
      width 20px
      height 20px
      background url(https://img.kaikeba.com/72209171400202rvky.png) center no-repeat
      background-size cover
      display inline-block
      margin-right 4px
.emoji-wrapper
  display flex
  width 240px
  height 160px
  overflow-y scroll
  justify-content flex-start
  flex-wrap wrap
  .emoji
    width 40px
    height 40px
    cursor pointer
  .emj-img
    width 30px
    height 30px
.emoji-wrapper-m
  display flex
  min-width 280*$vw
  max-width 100vw
  height 160*$vw
  overflow-y scroll
  justify-content flex-start
  flex-wrap wrap
  padding 5*$vw 5*$vw
  padding-left 8*$vw
  margin-top 9*$vw
  .emoji
    width 35*$vw
    height 35*$vw
    cursor pointer
    text-align center
  .emj-img
    width 25*$vw
    height 25*$vw
.mute-container
  // position absolute
  top 20px
  right 28px
  font-size 12px;
  width 65px
  height 12px
  cursor pointer
  display flex
  align-items center
  font-family PingFangSC-Regular,PingFang SC;
  font-weight 400;
  color rgba(221,221,221,1);
  user-select none
  .mute-icon
    width 12px
    height 12px
    transition all .3s ease
    background url('https://img.kaikeba.com/65845122400202nvfz.png') no-repeat center
    background-size cover
    margin-right 3px
  .mute-icon-select
    width 12px
    height 12px
    transition all .3s ease
    background url('https://img.kaikeba.com/85845122400202snpd.png') no-repeat center
    background-size cover
    margin-right 3px

.toolbar-wrapper-m
  border-top none
  padding 0
  font-size 16*$vw
  color #808080
  background none
  height 50*$vw
  .tb-item-like
    position absolute
    top -2*$vw
    right 0*$vw
    height 35*$vw
    width: 35px
    line-height 35*$vw
    display flex
    align-items center
    user-select none
    color #dddddd
    font-size 16*$vw
    .like-num 
      position absolute
      top  -10*$vw
      right 0
      color #E64262
      background #FFFFFF
      border-radius 7*$vw
      padding 0 0*$vw
      
      line-height 15.5*$vw
      height 14*$vw
      font-size 10*$vw
      font-weight bold
      z-index 10
      width 100%
      text-align center
      letter-spacing 0
      overflow hidden
      



    .icon 
      width 35*$vw
      height 35*$vw
      background url(https://img.kaikeba.com/a/35816140101202ckbh.png) center no-repeat
      background-size contain
      display inline-block 
      margin-right 0
      
      .icon-like 
        width 20*$vw
        height 20*$vw
        margin auto
        margin-top: 15*$vw
      // margin-right 4*$vw
.online-wrapper
  position absolute
  top 15px
  right 100px
  height 20px
  line-height 20px
  display flex
  align-items center
  -webkit-user-select none
  user-select none
  color #ddd
  font-size 16px
