  }
}

.msg-item-notify-m {
  text-align: left;
  margin-bottom: 8 * $vw;

  .notify-body {
    padding: 3px 8 * $vw;
    line-height: 20 * $vw;
    border-radius: 4 * $vw;
  }

  &:last-child {
    margin-bottom: 20 * $vw;
  }

  &.msg-item-notify-custom {
    color: #fff;
  }

  .notify-pre-img {
    height: 20 * $vw;
    width: 20 * $vw;
    margin-right: 8 * $vw;
  }
}

.notify-body {
  max-width: 100%;
