@import '../common.styl';

.msg-item {
  display: flex;
  margin: 16px 0;
  justify-content: flex-start;

  &:hover {
    .hover-function {
      display: block !important;
    }
  }

  .avatar {
    width: 32px;
    height: 32px;
    margin-top: 0px;
    margin-right: 8px;
    background: #ccc;
    border-radius: 50%;

    img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
    }
  }

  .info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .info-box {
  }

  .time {
    font-size: 14px;
    color: #999;
    line-height: 15px;
    align-items: center;
    display: flex;
    height: 15px;
    position: relative;

    div {
      width: auto;
      max-width: 200px;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      cursor: pointer;
    }

    .title {
      padding: 0 4px;
      height: 18px;
      border-radius: 8px 8px 8px 0;
      font-size: 12px;
      margin-right: 4px;
      line-height: 18px;
      display: inline-block;
    }

    .nick {
      font-size: 14px;
      color: #8C8C8C;
    }
    
  }

  .persnal-title {
    width: auto;
    height: 14px;
    margin-right: 5px;
  }

  // .message-img {
  // max-width 80vw,
  // height auto
  // }
  .message-img {
    max-width: 100%;
    cursor: crosshair;
    display: block;
  }

  .text {
    position: relative;
    display: inline-block;
    max-width: 280px;
    margin-top: 5px;
    margin-right: 48px;
    padding: 5px 12px;
    background: #1F1F1F;
    border-radius: 2px 16px 16px 16px;
    color: #D9D9D9;
    font-size: 14px;
    line-height: 22px;
    word-break: break-all;
    overflow-wrap: break-word;
  }

  .hover-function {
    position: absolute;
    top: 0px;
    right: 0px;
    
    white-space: nowrap;
    text-decoration: underline;
    display: none;
    font-size: 12px;
    color: rgba(153, 153, 153, 1);
    line-height: 12px;
    margin: 0px 4px;
    cursor: pointer;

    &:hover {
      color: #00A5E4;
    }
  }

  .emj-img {
    width: 22px;
    height: 22px;
  }
}

.self {
  flex-direction: row-reverse;

  &:hover {
    .hover-function {
      display: none !important;
    }
  }

  .info, .info-box {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .avatar {
    margin: 0 0 0 0px;
    display: none;
  }
  .time  {
    display: none
  }
  .text {
    background: #434343;
    border-radius: 16px 2px 16px 16px;
    margin-right: 0;
    margin-left: 48px;
     margin-top: 0;
    color: #D9D9D9;

    .hover-function {
      left: auto;
      right: 100%;
      display: none;
    }
  }
}

